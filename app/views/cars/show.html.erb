<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @car.title %></h5>
          <p class="card-text"><%= simple_format @car.body %></p>
          <p class="card-text">
            <small class="text-muted">更新日：<%= @car.updated_at.strftime("%Y-%m-%d") %></small>
          </p>
          <% if current_user.already_favorited?(@car) %>
            <%= link_to car_favorites_path(@car), method: :delete do %>
              <i class="fas fa-heart"></i>
            <% end %>
            <%= @car.favorites.count %>
          <% else %>
            <%= link_to car_favorites_path(@car), method: :post do %>
              <i class="far fa-heart"></i>
            <% end %>
            <%= @car.favorites.count %>　
          <% end %>
          <% if @car.user == current_user %>
            <%= link_to '編集', edit_car_path(@car), class: "btn btn-success" %>
            <%= link_to '削除', car_path(@car), method: :delete, class: "btn btn-danger" %>
          <% end %>
       </div>
      </div>
    </div>
  </div>
</div>
