<%= form_for car do |f| %>
<div class="form-group">
    <label>車名</label>
    <%= f.text_field :title, class: "form-control" %>
      </div>
<div class="form-group">
    <label>車種紹介</label>
    <%= f.text_area :body, class: "form-control" %>
      </div>
      <div>
         <%= f.submit class: "btn btn-success" %>
      </div>
<% end %>
    