<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">レシピ名</th>
            <th scope="col">投稿者</th>
            <th scope="col">　</th>
          </tr>
        </thead>
        <tbody>
         <% @cars.each do |car| %>
         <tr>
             <td><%= link_to car.title, car_path(car) %></td>
             <td><%= car.user.name %></td>
             <td>
               <% if current_user.already_favorited?(car) %>
               <%= link_to car_favorites_path(car), method: :delete do %>
               <i class="fas fa-heart"></i>
               <% end %>
               <% else %>
               <%= link_to car_favorites_path(car), method: :post do %>
               <i class="far fa-heart"></i>
               <% end %>
               <% end %>
               <%= car.favorites.count %>
             </td>
         </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
